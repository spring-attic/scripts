<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.3.0.BUILD-SNAPSHOT</version>
	</parent>

	<groupId>org.springframework.cloud</groupId>
	<artifactId>spring-cloud-samples</artifactId>
	<version>2020.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Spring Cloud Samples Scripts</name>

	<profiles>
		<profile>
			<id>build</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>build</module>
			</modules>
		</profile>
		<profile>
			<id>docs</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>docs</module>
			</modules>
		</profile>
		<profile>
			<id>base</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>commons</module>
				<module>bus</module>
				<module>circuitbreaker</module>
				<module>config</module>
				<module>consul</module>
				<module>contract</module>
				<module>cloudfoundry</module>
				<module>docs</module>
				<module>function</module>
				<module>gateway</module>
				<module>kubernetes</module>
				<module>netflix</module>
				<module>openfeign</module>
				<module>security</module>
				<module>sleuth</module>
				<module>stream-core</module>
				<module>stream-binder-rabbit</module>
				<module>stream-binder-kafka</module>
				<module>zookeeper</module>
				<module>vault</module>
			</modules>
		</profile>
		<profile>
			<id>starters</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>starters</module>
				<module>cli</module>
			</modules>
		</profile>
		<profile>
			<id>apps</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>tests</module>
				<module>configserver</module>
				<module>eureka</module>
				<module>hystrix-dashboard</module>
				<module>turbine</module>
				<module>customers-stores</module>
				<module>authserver</module>
				<module>sso</module>
			</modules>
		</profile>
	</profiles>

	<properties>
		<java.version>1.8</java.version>
		<spring-cloud.version>2020.0.0-SNAPSHOT</spring-cloud.version>
		<spring-cloud-release.version>${spring-cloud.version}</spring-cloud-release.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<!--skip deploy (this is just a test module) -->
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>spring-libs-snapshot</id>
			<url>https://repo.spring.io/libs-snapshot</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>spring-libs-release</id>
			<url>https://repo.spring.io/libs-release</url>
		</pluginRepository>
	</pluginRepositories>

</project>
